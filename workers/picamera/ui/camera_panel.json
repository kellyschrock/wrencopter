{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "gravity": "center",
    "orientation": "vertical",
    "padding": 6,
    "background": "#88000000",
    "children": [
      {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "text": "Camera",
        "gravity": "center",
        "textColor": "white",
        "textSize": 18,
        "paddingBottom": 8,
        "background": "@null"
      },
      {
        "type": "Space",
        "layout_width": "match_parent",
        "layout_height": 2,
        "background": "white"
      },
      {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "text": "Picture",
        "gravity": "center",
        "textColor": "white",
        "textSize": 15,
        "paddingBottom": 8,
        "background": "@null"
      },
      {
        "type": "ImageButton",
        "id": "take_picture",
        "layout_width": 120,
        "layout_height": 120,
        "background": "@null",
        "icon": "$(img)/picamera/shutter.png",
        "scaleType": "fitCenter",
        "on_click": {
          "worker_id": "picamera",
          "msg_id": "take_picture"
        }
      },
      {
        "type": "Space",
        "layout_width": "match_parent",
        "layout_height": 2,
        "background": "white"
      },
      {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "text": "Video",
        "gravity": "center",
        "textColor": "white",
        "textSize": 15,
        "paddingBottom": 8,
        "paddingTop": 8,
        "background": "@null"
      },
      {
        "type": "ImageButton",
        "id": "btn_video",
        "layout_width": 120,
        "layout_height": 120,
        "background": "@null",
        "scaleType": "fitCenter",
        "icon": "$(img)/picamera/record_off.png",
        "on_click": {
          "worker_id": "picamera",
          "msg_id": "toggle_video"
        }
      },
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text": "White Balance",
        "gravity": "center"
      },
      {
        "type": "Spinner",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "id": "spin_awb",
        "name": "awb",
        "items": [
          {"id": "auto", "text": "auto"},
          {"id": "sunlight", "text": "sunlight"},
          {"id": "cloudy", "text": "cloudy"},
          {"id": "shade", "text": "shade"},
          {"id": "tungsten", "text": "tungsten"},
          {"id": "fluorescent", "text": "fluorescent"},
          {"id": "incandescent", "text": "incandescent"},
          {"id": "flash", "text": "flash"},
          {"id": "horizon", "text": "horizon"}
        ],
        "on_item_selected": {
          "worker_id": "picamera",
          "msg_id": "set_awb"
        }
      },
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_marginTop": 20,
        "text": "ISO",
        "gravity": "center"
      },
      {
        "type": "Spinner",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "id": "spin_iso",
        "name": "iso",
        "items": [
          {"id": "0", "text": "Auto"},
          {"id": "100", "text": "100"},
          {"id": "200", "text": "200"},
          {"id": "400", "text": "400"},
          {"id": "800", "text": "800"}
        ],
        "on_item_selected": {
          "worker_id": "picamera",
          "msg_id": "set_iso"
        }
      },
      {
          "type": "ImageButton",
          "id": "btn_cam_settings",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_marginTop": "20dip",
          "minWidth": "34dip",
          "minHeight": "34dip",
          "scaleType": "fitXY",
          "icon": "$(img)/picamera/ic_settings.png",
          "background": "#00ffffff",
          "visibility": "gone",
          "on_click": {
              "worker_id": "picamera", "msg_id": "open_settings"
          }
      },
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_marginTop": 30,
        "text": "Brightness",
        "gravity": "center"
      },
      {
        "type": "LinearLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_marginTop": 18,
        "orientation": "horizontal",
        "gravity": "center",
        "children": [
          {
            "type": "ImageButton",
            "id": "btn_brightness_down",
            "layout_width": 50,
            "layout_height": 50,
            "icon": "$(img)/picamera/subtract_white.png",
            "on_click": {
              "worker_id": "picamera", "msg_id": "brightness_down"
            }
          },
          {
            "type": "TextView",
            "id": "txt_brightness",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "text": "50",
            "gravity": "center",
            "paddingLeft": 12,
            "paddingRight": 12
          },
          {
            "type": "ImageButton",
            "id": "btn_brightness_up",
            "layout_width": 50,
            "layout_height": 50,
            "icon": "$(img)/picamera/add_white.png",
            "on_click": {
              "worker_id": "picamera",
              "msg_id": "brightness_up"
            }
          }
        ]
      },
      {
        "type": "CheckBox",
        "id": "chk_vflip",
        "name": "vflip",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_marginTop": 18,
        "text": "V-Flip",
        "on_check": {
          "worker_id": "picamera",
          "msg_id": "do_vflip"
        }
      }
    ]
}
